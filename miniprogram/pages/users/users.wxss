/* miniprogram/pages/users/users.wxss */
/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo-block {
  margin-top: 40rpx;
  height: 200rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  justify-content: center;
}

.user-avatar{
  width: 160rpx;
  height: 160rpx;
  display: block;
  border-radius: 50%;
  overflow:hidden;
}

.user-nickname{
  margin-left: 50rpx;
  font-size: 40rpx;
}

.version-info{
  margin-top: 100rpx;
  margin-left: 50rpx; 
  font-size: 36rpx;

}

.swiper image {
  width: 100%;
  height: auto;
}